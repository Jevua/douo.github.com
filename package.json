{
  "name": "writing",
  "version": "0.0.1",
  "description": "Source code for Writing",
  "email": "dourokinga@gmail.com",
  "url": "https://dourok.info/",
  "repository": {
    "type": "git",
    "url": "https://github.com/douo/douo.github.com.git"
  },
  "license": "MIT",
  "main": "assets/js/entry.js",
  "pre-commit": "lint:staged",
  "lint-staged": {
    "*.{js,jsx,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,scss,html}": [
      "editorconfig-tools fix",
      "git add"
    ]
  },
  "scripts": {
    "lint": "eslint",
    "lint:staged": "lint-staged",
    "clean": "shx rm -rf _site/",
    "scaffold": "npm run clean && shx mkdir -p _site/assets && shx cp -r _assets/images/. _site/assets/images/ && shx cp -r _assets/*.woff2 _site/assets/",
    "build": "npm run scaffold && cross-env NODE_ENV=production webpack -p --progress && bundle exec jekyll build",
    "build:debug": "npm run scaffold && webpack --progress -d --verbose && bundle exec jekyll build -t",
    "start": "npm run scaffold && concurrently -k -n \"WEBPACK,JEKYLL,BROWSER-SYNC\" -c \"bgBlue.bold,bgRed.bold,bgCyan.bold\" \"webpack -w\" \"bundle exec jekyll build --watch\" \"browser-sync start -s _site -f _site --extensions html\""
  },
  "devDependencies": {
    "autoprefixer": "^8.5.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "browser-sync": "^2.18.13",
    "classnames": "^2.2.5",
    "concurrently": "^3.5.0",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "editorconfig-tools": "^0.1.1",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-import-resolver-webpack": "^0.10.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-react": "^7.4.0",
    "exports-loader": "^0.7.0",
    "file-loader": "^1.1.5",
    "imports-loader": "^0.8.0",
    "lint-staged": "^7.1.2",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.5.3",
    "postcss": "^6.0.8",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.6",
    "pre-commit": "^1.2.2",
    "prettier": "^1.6.1",
    "sass-loader": "^7.0.1",
    "shx": "^0.2.2",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.10.0",
    "webpack-cli": "^2.1.4"
  },
  "dependencies": {
    "babel-preset-env": "^1.6.0",
    "code-prettify": "^0.1.0",
    "d3": "^5.4.0",
    "d3-cloud": "^1.2.5",
    "d3-random": "^1.1.0",
    "d3-scale": "^2.0.0",
    "d3-scale-chromatic": "^1.3.0",
    "jquery": "^3.3.1",
    "lunr": "^2.2.1",
    "materialize-css": "^1.0.0-rc.1"
  }
}
